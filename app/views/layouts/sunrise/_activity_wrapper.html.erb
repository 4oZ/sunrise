<%= content_tag :div, :class => "activity", :id => ["activity", a.id].join("_") do -%>
  <div class="body">
    <%= activity_icon_tag a.key %>
    <%= timeago_tag a.created_at %>
    <div class="title">
      <% if a.owner %>
        <%= link_to a.owner.name, edit_path(:model_name => a.owner_type, :id => a.owner_id) %>
      <% else %>
        someone
      <% end %>

      <%= content_for :action %>
    </div>
    <div class="details">
      <div class="avatar">
        <% if a.owner %>
          <%= image_tag(a.owner.avatar.try(:url, :thumb), :height => 30, :width => 30) %>
        <% else %>
          <%= image_tag("sunrise/gravatar-140.png", :height => 30, :width => 30) %>
        <% end %>
      </div>
      
      <%= yield %>
    </div>
  </div>
<% end -%>