<%= content_tag :li, :id => dom_id(record) do %>
	<div> 
	  <%= link_to record.send(abstract_model.config.object_label_method), show_path(:id => record.id) %> 
	</div>
	
	<% unless record.descendants_count.zero? %>
     <%= render :partial=>"record", :collection => record.children %>
  <% end %>
<% end -%>
